page{
    background-color: #F3F3F3;
    font-size: 28rpx;
    position: relative;
}
.site-box{
    display: flex;
    flex-direction: column;
}
.site-box .list{
    width: 100%;
    height:auto;
    /*min-height: auto;*/
    /*max-height: auto;*/
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    background-color: #fff;
}
.site-box .list view.list-top{
    height: 20%;
    padding: 2.5% 0;
    width: 94%;
    padding: 1.4% 3% 0;
}
.list view.list-top text{
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    width: 50%;
    font-size: 32rpx;
}
.list view.list-top text:nth-child(2){
    text-align: right;
}
.site-box .list view.list-centre{
    height: 38%;
    padding: 5.5% 0;
    width: 94%;
    padding: 0 3%;
    margin: 1% 0;
}
.list view.list-centre text{
    height: auto;
    display: inline-block;
    width: 100%;
}
.site-box .list view.list-bottom{
    height: 28%;
    width: 94%;
    padding: 1% 3%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 1px solid #EEEEEE;
    border-bottom: 1px solid #E9E9E9;
}
.list view.list-bottom view{
    width: 50%;
}
.list view.list-bottom view.list-bottom-left{
    
}
 .list-bottom view.list-bottom-left checkbox{
    display: inline-block;
    vertical-align: middle;
}
 .list-bottom view.list-bottom-left text{
    display: inline-block;
    vertical-align: middle;
}
.list view.list-bottom view.list-bottom-right{
    text-align: right;
}
.list-bottom view.list-bottom-right text,.list-bottom view.list-bottom-right navigator{
    height: 60rpx;
    line-height: 60rpx;
    display: inline-block;
    width: 120rpx;
}
.list-bottom view.list-bottom-right navigator{
    background: url('http://www.njf2016.com/wx/img/compile.png') no-repeat 10rpx 8rpx/40rpx;
}
.list-bottom view.list-bottom-right text{
    background: url('http://www.njf2016.com/wx/img/del.png') no-repeat 10rpx 8rpx/40rpx;
}
.add{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #FAFAFA;
}
.add>navigator{
    display: block;
    width: 96%;
    height: 95rpx;
    line-height: 95rpx;
    text-align: center;
    background: -webkit-linear-gradient(left, #0DE521 , #008000); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #0DE521, #008000); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #0DE521, #008000); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #0DE521 , #008000); /* 标准的语法（必须放在最后） */
    color: #fff;
    border-radius: 50rpx;
    font-size: 32rpx;
}
