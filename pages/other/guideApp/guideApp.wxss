/* pages/other/guideApp/guideApp.wxss */
.box{
    position:fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    max-width: 100%;
    padding: 60rpx;
    z-index: 100000000000;
}
.njf-box{
    width: 100%;
    height: 300rpx;
    border-bottom: 1px solid #eee;
    margin-bottom: 30rpx;
}
.njf-box image{
    display: block;
    width: 150rpx;
    height: 150rpx;
    margin: 10rpx auto;
    border-radius: 40rpx;
    border: 1px solid #eee;
}
.app-name{
    display: block;
    width: 150rpx;
    height: 60rpx;
    margin: 0rpx auto;
    text-align: center;
    font-size: 35rpx;
    margin-top: 15rpx;
}
.com-name{
    display: block;
    width: 500rpx;
    height: 50rpx;
    margin: 0rpx auto;
    text-align: center;
    font-size: 30rpx;
    color: #999;
   animation-name:myfirst;
animation-duration:1s;
animation-timing-function:linear;
animation-iteration-count:infinite;
animation-direction:alternate;
animation-play-state:running;
}
@keyframes myfirst
{
from {color:#033EFF;}
to {color:#238F46;}
}
.njf-download{
    width: 100%;
    height: 400rpx;
}
.njf-download .more{
    display: block;
    max-width: 100%;
    background:#66BB47; 
    line-height: 80rpx;
    height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    padding-left: 20rpx;
    overflow: hidden;
    border-radius:10rpx 10rpx 0rpx 0rpx; 
}
.njf-download-url{
    padding: 20rpx;
    height: 170rpx;
    background: #eee;
margin-bottom: 30rpx;
border-radius:0rpx 0rpx 10rpx 10rpx; 
}
.njf-download-url text{
    font-size: 30rpx;
    line-height: 60rpx;
}
.njf-download-url input{
    margin-top:20rpx;
    border: 1px solid #3BB20F;
    color: #999;
    background: #fff;
    padding: 0rpx 10rpx;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius:10rpx; 
}
.copy{
    line-height: 60rpx;
    height: 60rpx;
    display: block;
    float: right;
    color: #34AA2E!important;
}
.footer{
    display: block;
    height: 60rpx;
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 100rpx;
    left: 0rpx;
font-size: 30rpx;
color: #999;
}
.video-item{
     display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: -100000; 
}
.video-view{
     display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: -100000; 
}