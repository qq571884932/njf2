/* pages/user/order/order.wxss */

page{
    background: #F8F8F8;
    height: 100%;
}
.order{
  height: 100%;
    width: 100%;
}
.false{
    color: #37773B;
    border-bottom: 2rpx solid green;
}
.order .top{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 998;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    color: #000;
}
.order .top scroll-view{
    width: 100%;
    height: 100%;
    display: flex;
    white-space: nowrap;
    font-size: 28rpx;
}
.top scroll-view view{
    display: inline-block;
    width: 187.5rpx;
    text-align: center;
}
.fixed{
    width: 100%;
    height: 80rpx;
}
.order .content{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    padding-bottom: 0rpx;
    height: auto;
}
.content .o-box{
    padding-bottom: 20rpx;
    color: #999;
    font-size: 28rpx;
}
/*-------------------------------Head Go-------------------------------*/
.o-box navigator{
    height: 66rpx;
    line-height: 66rpx;
    background-color: #fff;
}
.o-box navigator>image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin:0 20rpx;
}
.o-box navigator>image:nth-child(3){
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle;
}
.o-box navigator>text{
    vertical-align: middle;
    color: #000;
    font-size: 25rpx;
}
.o-box navigator>text:nth-child(4){
    color: red;
    float: right;
    margin-right: 20px;
    font-size: 25rpx;
}
/*-------------------------------Head Over-------------------------------*/
/*-------------------------------content Go-------------------------------*/
.o-box .goods{
    display: flex;
    padding: 5px 8px;
    background-color: #FAFAFA;
}
.goods view.good-img{  /*图片*/
    width: 30%;
    height: 190rpx;
    margin-right: 10px;
}
.goods view.good-img image{
    width: 100%;
    height: 100%;
}
.goods view.good-cnt{   /*内容*/
   width: 70%;
   font-size: 24rpx;
   padding-top: 10rpx;
}
.goods view.good-cnt text.type{
    padding: 3rpx 10rpx;
    color: #fff;
    margin: 0 8rpx 0 0;
    border-radius: 6rpx;
}
.goods view.good-cnt>view{
    display: inline-block;
    vertical-align: top;
}
.goods view.good-cnt>view.cnt-left{
    width: 100%;
    height: 100%;
    font-size: 25rpx;
    white-space: nowrap;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.goods view.good-cnt>view.cnt-left>view:nth-child(1){
    color: #000;
}
.goods view.good-cnt>view.cnt-left>view:nth-child(2){
    position: relative;
}
.goods view.good-cnt>view.cnt-left>view:nth-child(3){
    color: red;
}
.good-cnt .cnt-left .position{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}
.o-box .btn{
    display: blcok;
    text-align: right;
    background-color: #fff;
}
.o-box .txt{
  border-top: 1px solid #F1F1F1;
  border-bottom: 1px solid #F1F1F1;
}
.o-box .txt text{
    color: #4A4A4A;
    line-height: 80rpx;
    font-weight: 600;
}
.o-box .btn .more{
  displaly: inline-block;
  height: 62rpx;
  line-height: 62rpx;
  width: 80rpx;
  text-align: center;
  vertical-align: middle;
}
/*-------------------------------content Over-------------------------------*/
/********************************buttom Go***********************************/
.btn button{
    display: inline-block;
    vertical-align: middle;
    padding: 0 30rpx;
    font-size: 24rpx;
    margin: 10rpx 10rpx 0;
    border-radius: 50rpx;
    border: 1rpx solid #C7C7C7;
    background-color: #fff;
}
.btn button.but-369D28{
    border: 1rpx solid #369D28;
    color: #369D28;
}
/********************************buttom Over***********************************/
.border-bottom{
  border-bottom: 1px solid #000;
}
.but-box{
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #F1F1F1;
}
.more{
  position: relative;
}
.more .minute{
  position: absolute;
  left: -35rpx;
  top: -130rpx;
  width: 150rpx;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 10rpx;
}
.more .minute::after{
  content: "";
  position: absolute;
  left: 50%;
  bottom: -38rpx;
  height: 0;
  width: 0;
  margin-left: -20rpx;
  border: 20rpx solid transparent;
  border-top: 20rpx solid rgba(0, 0, 0,.5);
}
.more .minute>text{
  color :#fff;
}
.more .minute text{
  display: block;
  border-bottom: #ECECEC 1px solid;
}