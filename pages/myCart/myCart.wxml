<view class='content'>
      <view class='null-block'></view>
      <!--购物车列表-->
      <view class='cart-box'>
            <!--商品列表块开始-->
            <view class='cart-item'>
                  <view class='cart-bar'>
                        <checkbox-group class='my-checkbox checkbox-style1'>
                              <checkbox bindtap='sonCheckAll' id='10'/>
                        </checkbox-group>
                        <text class='iconfont icon-dianpu'></text>
                        <text class='cart-shop-name'>山里来土猪</text>
                        <text class='iconfont icon-qianwang'></text>
                  </view>
                  <view class='cart-info'>
                        <checkbox-group class='my-checkbox checkbox-style2'>
                              <checkbox checked='{{check==10?true:false}}' />
                        </checkbox-group>
                        <image class='cart-img' src='../../style/img/dafdd95b-a.jpg'></image>
                        <view class='cart-right'>
                              <view class='cart-text'>
                                    <view class='cart-title'>
                                          <text class='goods-icon'>现售</text>
                                          <text>胜多负少斯蒂芬斯蒂芬第三方撒防守</text>
                                    </view>
                                    <text class='cart-specifications'>3斤5两</text>
                                    <text class='cart-price'>￥35</text>
                              </view>
                              <view class='cart-other'>
                                    <text class='iconfont icon-edit' bindtap='toggleEditView' id='1'></text>
                                    <text class='cart-num'>×1</text>
                              </view>
                        </view>
                        <!--修改模块开始-->
                        <view class='edit-box {{editView==1?"show":"hide"}}'>
                              <view class='edit-block'>
                                    <view class='edit-num'>
                                          <button class='add'>
                                                <text class='iconfont icon-tianjia'></text>
                                          </button>
                                          <input class='cart-input'></input>
                                          <button class='minus'>
                                                <text class='iconfont icon-jian'></text>
                                          </button>
                                    </view>
                                    <view class='edit-specifications'>
                                          <text class='edit-specifications-text'>三斤五两</text>
                                          <text class='iconfont icon-xiangxia'></text>
                                    </view>
                              </view>
                              <view class='edit-success'>
                                    <button bindtap='toggleEditView' id='1'>完成</button>
                              </view>
                        </view>
                        <!--修改模块结束-->
                  </view>
            </view>
