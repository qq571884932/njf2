/*切换分类*/
.swiper-container{  
  background: #fff;
  position: relative;  
}  
.swiper-container swiper{
  height: 330rpx;
}
.swiper-container .wx-swiper-dot{  
    width:  30rpx;
    height: 10rpx;  
    display: inline-flex;  
    justify-content:space-between;  
    border-radius: 50%;  
}  
.swiper-container .wx-swiper-dot::before{  
    content: '1';  
    flex-grow: 1;    
    background: #bfbfbf;  
    border-radius: 10rpx;     
}  
.swiper-container .wx-swiper-dot-active::before{  
    background:#66BB47; 
     border-radius: 10rpx;    
} 
