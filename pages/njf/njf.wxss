/* pages/njf/njf.wxss */
@import "../../style/font/icon.wxss";
/*浮窗开始*/
.floating-window{
  display: block;
  width: 300rpx;
  height: 150rpx;
  position:fixed;
  bottom: 60rpx;
  left: 230rpx; 
  overflow: hidden;
}


.floating-window .ks{
  display: block;
  width: 300rpx;
  height: 150rpx;
  position:relative;
  

}
.floating-window .ks-a{
animation:mymove 1s infinite;
animation-iteration-count:1;
}
@keyframes mymove
{
from {opacity:1;}
to {opacity:0;}
}
/*浮窗结束*/

