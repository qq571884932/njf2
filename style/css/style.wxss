/*暗绿色字体*/

.dark-green {
    color: #238f46;
}

/*商品列表2开始*/

.goods-list2 {
    width: 100%;
}

.goods-item2 {
    margin-top: 10rpx;
    display: inline-block;
    width: 49%;
    height: 585rpx;
    overflow: hidden;
    background: white;
    position: relative;
    z-index: 1;
}

.goods-list2 .goods-item2:nth-child(2n) {
    margin-left: 2%;
}

.goods-item2 .img-top {
    width: 100%;
    height: 367.5rpx;
    overflow: hidden;
    position: relative;
}

.goods-item2 .img-top image{
    display: block;
    width: 100%;
    height: 367.5rpx;
}
.goods-item2 .goods-introduce{
    max-width:100%;
    padding:10rpx 20rpx;
}
.goods-item2 .goods-name{
    overflow: hidden;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    font-size: 30rpx;
    font-family: "微软雅黑";
}
.goods-item2 .goods-name .self{
    font-size: 27rpx;
    padding: 0rpx 6rpx;
    background: #F9634F;
    color: white;
    border-radius: 5rpx;
}
.goods-item2 .mode-address{
    width: 100%;
    height: 40rpx;

    display: flex;
    margin-top: 15rpx;
    
}
.goods-item2 .mode-box{
    flex: 3.5;
    height: 40rpx;
    margin: 0rpx;
    padding: 0rpx;
     display: flex;
}
.goods-item2 .mode-address .mode{
width: 75rpx;
font-size: 26rpx;
color: #FFBE2D;
border: 1rpx solid #FFBE2D;
border-radius: 5rpx;
margin-right: 10rpx;
line-height: 40rpx;
text-align: center;
}

.goods-item2 .mode-address .address{
    flex: 1;
font-size: 28rpx;
color: #999;
text-align: right;
display: block;
float: right;
height: 40rpx;
line-height: 40rpx;
}
.goods-item2 .price-sales{
    height: 80rpx;
    width: 100%;
    position: absolute;
    bottom: -15rpx;
}
.goods-item2 .price-sales .price{
    color: #F9634F;
    font-size: 35rpx;
}
.goods-item2 .price-sales .price-sgin{
    color: #F9634F;
    font-size: 26rpx;
}
.goods-item2 .price-sales .sales{
    color: #999;
    font-size: 26rpx;
    margin-left: 10rpx;

}
.goods-item2 .price-sales .shop{
text-align: center!important;
    width: 45rpx;
    height: 45rpx;
    font-size: 34rpx!important;
    line-height: 45rpx;
    position: absolute;
    right: 37rpx;
    bottom: 33rpx;
    z-index: 1000;
    border: 1rpx solid #F9624E;
    border-radius: 30rpx;
    color: #F9624E;
}
.goods-item2:nth-child(2n-1) .price-sales .icon-dianpu{
margin-left: -2rpx;
}
/*商品列表2结束*/
/*搜索开始*/

.search-box {
    width: 100%;
    height: 40px;
    background: white;
    border-bottom: 1rpx solid #ededed;
    position: fixed;
    top: 0rpx;
    z-index: 2;
}


.search-block2 {
    width: 580rpx;
    height: 30px;
    background: #ededed;
    border-radius: 30px;
    float: left;
    margin-top: 5px;
    margin-left: 30rpx;
}

.search-text {
    width: 100rpx;
    float: right;
    line-height: 40px;
    color: #238f46;
    font-size: 30rpx;
}

.search-block2 .icon-guanbi {
    float: left;
    display: block;
    width: 40rpx;
    height: 60rpx;
    line-height: 30px;
    font-size: 30rpx;
    margin-left: 15rpx;
    margin-right: 10rpx;
}

.search-block2 .icon-shanchu1 {
    text-align: center;
    line-height: 30px;
    display: block;
    float: right;
    width: 60rpx;
    height: 60rpx;
    font-size: 30rpx;
    margin-left: 15rpx;
    margin-right: 10rpx;
    color: #999;
}

.search-block2 .search-input {
    width: 400rpx;
    float: left;
    height: 30px;
    font-size: 30rpx;
}

/*搜索结束*/

/*商品列表样式1开始*/

.goods-item1 {
    background: #fff;
    max-width: 100%;
    margin-top: 10rpx;
    height: 215rpx;
    padding: 30rpx;
    position: relative;
}

.goods-item1 .goods-text {
    margin-top: 20rpx;
    margin-left: 30rpx;
    width: 400rpx;
    height: 200rpx;
    float: left;
    font-size: 30rpx;
}

.goods-item1 .goods-text .goods-h2 {
    font-size: 40rpx;
    display: block;
    height: 50rpx;
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goods-item1 .goods-text .goods-price {
    display: block;
    font-family: "微软雅黑"；;
}

.goods-item1 .goods-text .goods-price .price-avtice {
    font-size: 60rpx;
    margin-right: 5rpx;
    color: #f9624e;
}

.goods-item1 .goods-img {
    width: 240rpx;
    height: 240rpx;
    float: right;
    position: relative;
}

.goods-item1 .goods-img image {
    border-radius: 120rpx;
    width: 220rpx;
    height: 220rpx;
}

.goods-item1 .xiaoshou {
    font-weight: 700;
    display: block;
    transform: rotate(-48deg);
    font-size: 24rpx;
    position: absolute;
    bottom: 15rpx;
    text-align: center;
    z-index: 1000;
    color: #fff;
    right: 9rpx;
}

.recommend-border {
    position: absolute;
    width: 0;
    height: 0;
    border-bottom: 90rpx solid #238f46;
    border-left: 90rpx solid transparent;
    bottom: 0rpx;
    right: 0rpx;
}

.recommend-border2 {
    z-index: 50;
    position: absolute;
    width: 0;
    height: 0;
    border-bottom: 30rpx solid #fff;
    border-left: 30rpx solid transparent;
    bottom: 0rpx;
    right: 0rpx;
}

/*商品列表样式1结束*/

/*排序样式1开始*/

.sort-content {
    width: 100%;
    height: 40px;
    position: fixed;
    top: 40px;
     z-index: 2;
}

.sort-box {
    width: 100%;
    height: 40px;
    background: white;
    display: flex;
    border-bottom: 1px #eee solid;

}

.sort-box .sort-item {
    height: 40px;
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    line-height: 80rpx;
    position: relative;
}

.sort-box .sort-item .icon-xiangshangjiantou,
.sort-box .sort-item .icon-xiangxiajiantou {
    position: absolute;
    line-height: 40px;
    top: 0rpx;
    right: 55rpx;
    font-size: 50rpx !important;
}

.sort-bg {
    position: fixed;
    top: 85px;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 10000;
}

.sort-cover {
    width: 100%;
    background: #fff;
    position: fixed;
    z-index: 10001;
}

.sort-cover .option {
    position: relative;
    width: 100%;
    height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.sort-cover .option text {
    line-height: 80rpx;
    font-size: 27rpx;
    margin-left: 30rpx;
}

.sort-cover .option .iconfont {
    line-height: 80rpx;
    position: absolute;
    right: 30rpx;
    top: 0rpx;
    color: #238f46;
    visibility: hidden;
    font-size: 30rpx;
}

.sort-cover .sort-active {
    color: #238f46;
}

.sort-cover .sort-active .iconfont {
    visibility: inherit !important;
}

.occupy-view {
    width: 100%;
    height: 84px;
}
.occupy-view2 {
    width: 100%;
    height: 42px;
}
/*排序样式1结束*/
/*底部加载动画开始*/
.bottom-load{
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.bottom-load .bottom-load-text{
     display:inline!important;
       font-size: 27rpx;
  color: #999;
   line-height: 100rpx;
}
.bottom-load image{
  height: 100rpx;
  width: 100rpx;
float: left;
  display: block;
}
.bottom-load .load-block text{
  line-height: 100rpx;
  font-size: 27rpx;
  color: #999;
  display: block;
  float: left;
}
.load-block{
  height: 100rpx;
  width: 260rpx;
  margin: 0px auto;
}
/*底部加载动画结束*/